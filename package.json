{
	"name": "home",
	"publisher": "hyphaene",
	"displayName": "home",
	"description": "custom view for personal purposes",
	"repository": {
		"type": "git",
		"url": "https://github.com/hyphaene/vscode-extension"
	},
	"homepage": "https://github.com/hyphaene/vscode-extension/blob/master/README.md",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:home.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "home.helloWorld",
				"title": "Hello World"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/ts.json"
			},
			{
				"language": "javascriptreact",
				"path": "./snippets/ts.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile;",
		"compile": "tsc -p ./",
		"commit": "git-cz",
		"release": "standard-version",
		"postrelease": "git push --follow-tags origin HEAD && npm publish",
		"package": "vsce package",
		"publish": "vsce publish",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"cz-conventional-changelog": "^3.0.2",
		"husky": "^3.1.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"standard-version": "^7.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
